@model IEnumerable<RpaData.Models.tblPharmacists>

@{
    ViewData["Title"] = "Clients";
}

<h1>@ViewData["Title"]</h1>

<div class="card ">
    <div class="card-header">
        <div class="btn-group btn-group-sm pull-right">
            <div class="btn-group btn-group-sm pull-right">
                <a href="@Url.Action("Create")" class="btn btn-info btn-sm">CREATE</a>
            </div>
        </div>
    </div>
    <div class="card-body">
        <table id="example2" class="table table-bordered table-hover ">
            <thead class="thead-light">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Client)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.tblPharmacy.pharmacyName)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.Client.RpaNumber)
                    </th>
                    <th>
                        Years In Practice
                    </th>
                    <th>
                        Status
                    </th>



                    <th></th>
                </tr>
            </thead>
            <tbody class="table-sm">
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Client.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.tblPharmacy.pharmacyName)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Client.RpaNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.yearsInPractice)
                    </td>
                    <td>
                        @(item.status?"Activated": "Pendind Approval")
                    </td>

                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-success" data-toggle="tooltip" data-placement="top" title="Edit"><i class="fas fa-edit"></i></a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-success" data-toggle="tooltip" data-placement="top" title="Details"><i class="fas fa-folder-open"></i></a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-success" data-toggle="tooltip" data-placement="top" title="Delete"><i class="fas fa-trash-alt"></i></a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
  <div class="card-footer"></div>
</div>
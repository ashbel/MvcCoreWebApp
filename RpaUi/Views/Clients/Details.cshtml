@model RpaData.Models.tblPharmacists

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div class="card ">
    <div class="card-header">
        <h4>Pharmacists</h4>
        <div>
            <a asp-action="Index" class="btn btn-sm btn-outline-success">  <i class="fas fa-long-arrow-alt-left"></i> Back to List</a>
            @if (Model.status)
            {
                <a href="@Url.Action("Confirm", "Clients", new { id = Model.Id, act = false })" class="btn btn-sm btn-outline-danger">  <i class="far fa-thumbs-down"></i> Decline</a>
            }
            else
            {
                <a href="@Url.Action("Confirm", "Clients", new { id = Model.Id, act = true })" class="btn btn-sm btn-outline-primary">  <i class="far fa-thumbs-up"></i>  Approve</a>
            }
        </div>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <h4>Client Details</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-6">
                        @Html.DisplayNameFor(model => model.Client)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Client.FullName)
                    </dd>
                    <dt class="col-sm-6">
                        @Html.DisplayNameFor(model => model.Client.Email)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Client.Email)
                    </dd>
                    <dt class="col-sm-6">
                        @Html.DisplayNameFor(model => model.Client.DateOfBirth)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Client.DateOfBirth)
                    </dd>
                    <dt class="col-sm-6">
                        @Html.DisplayNameFor(model => model.Client.Gender)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Client.Gender)
                    </dd>
                    <dt class="col-sm-6">
                        @Html.DisplayNameFor(model => model.Client.PhoneNumber)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Client.PhoneNumber)
                    </dd>
                    <dt class="col-sm-6">
                       Renewal Date
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.dateOfRenewal)
                    </dd>
                </dl>
            </div>
            <div class="col-md-6">
                <h4>Proffessional Details</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-6">
                        @Html.DisplayNameFor(model => model.Client.RpaNumber)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Client.RpaNumber)
                    </dd>
                    <dt class="col-sm-6">
                        @Html.DisplayNameFor(model => model.tblPharmacy.pharmacyName)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.tblPharmacy.pharmacyName)
                    </dd>
                    <dt class="col-sm-6">
                        @Html.DisplayNameFor(model => model.workAddress)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.workAddress)
                    </dd>
                    <dt class="col-sm-6">
                        @Html.DisplayNameFor(model => model.qualifications)
                    </dt>
                    <dd class="col-sm-10">
                        <ul>
                            @foreach (var item in ViewBag.Qualifications as IEnumerable<RpaData.Models.tblQualifications_Pharmacist>)
                            {
                                <li>@item.Qualification.qName</li>
                            }
                        </ul>
                    </dd>
                    <dt class="col-sm-6">
                        @Html.DisplayNameFor(model => model.yearsInPractice)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.yearsInPractice)
                    </dd>
                    <dt class="col-sm-6">
                        @Html.DisplayNameFor(model => model.dateOfJoiningRPA)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.dateOfJoiningRPA)
                    </dd>
                    <dt class="col-sm-6">
                        @Html.DisplayNameFor(model => model.goodStandingPCZ)
                    </dt>
                    <dd class="col-sm-10">
                        @(Model.goodStandingPCZ?"Yes":"No")
                    </dd>
                    <dt class="col-sm-6">
                        @Html.DisplayNameFor(model => model.goodStandingReasonPCZ)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.goodStandingReasonPCZ)
                    </dd>
                    <dt class="col-sm-6">
                        @Html.DisplayNameFor(model => model.goodStandingMCAZ)
                    </dt>
                    <dd class="col-sm-10">
                        @(Model.goodStandingMCAZ?"Yes":"No")
                    </dd>
                    <dt class="col-sm-6">
                        @Html.DisplayNameFor(model => model.goodStandingReasonMCAZ)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.goodStandingReasonMCAZ)
                    </dd>


                    <dt class="col-sm-6">
                        @Html.DisplayNameFor(model => model.Created)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Created)
                    </dd>
                </dl>
            </div>
        </div>
        <hr />

    </div>

    <div class="card-footer">
        <a asp-action="Index" class="btn btn-sm btn-outline-success">  <i class="fas fa-long-arrow-alt-left"></i> Back to List</a> 
        @if (Model.status)
        {
            <a href="@Url.Action("Confirm", "Clients", new { id = Model.Id, act = false })" class="btn btn-sm btn-outline-danger">  <i class="far fa-thumbs-down"></i> Decline</a>
        }
        else
        {
            <a href="@Url.Action("Confirm", "Clients", new { id = Model.Id, act = true })" class="btn btn-sm btn-outline-primary">  <i class="far fa-thumbs-up"></i>  Approve</a>
        }
    </div>
</div>
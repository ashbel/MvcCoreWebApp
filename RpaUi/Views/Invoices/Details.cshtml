@model RpaData.Models.tblInvoices

@{
    ViewData["Title"] = "Invoices";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<div class="card ">
    <div class="card-header">
        <h4>Details</h4>
    </div>
    <div class="card-body">
        <hr />
        <dl class="row">
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Amount)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Amount)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.DueDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DueDate)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.InvoiceComment)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.InvoiceComment)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.InvoiceType)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.InvoiceType.CodeName)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Created)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Created)
            </dd>
        </dl>
    </div>
    
    <div class="card-footer">
        <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
        <a asp-action="Index">Back to List</a>
    </div>
</div>


@model RpaData.Models.tblPayments

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Payment Details</h2>

<div class="card ">
    <div class="card-header">
        <div>
            <a asp-action="Index" class="btn btn-sm btn-success">  <i class="fas fa-long-arrow-alt-left"></i> Back to List</a>
            @if (!Model.PaymentStatus)
            {
                <a asp-action="ConfirmPayment" asp-route-id="@Model.Id" class="btn btn-sm btn-primary">  <i class="far fa-thumbs-up"></i> Confirm Payment</a>
            }
            else
            {
                <a asp-action="UndoConfirmPayment" asp-route-id="@Model.Id" class="btn btn-sm btn-danger">  <i class="far fa-thumbs-down"></i> Undo Confirmation</a>
            }
        </div>
    </div>
    <div class="card-body">
        <div>
            <hr />
            <dl class="row">
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.AmountPaid)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.AmountPaid)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.PayDate)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.PayDate)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.PaymentComment)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.PaymentComment)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Client)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Client.FullName)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.PaymentType)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.PaymentType.CodeName)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Invoice)
                </dt>
                <dd class="col-sm-10">
                    INV-@Model.InvoiceId.ToString("000")
                </dd>

                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.PaymentStatus)
                </dt>
                <dd class="col-sm-10">

                    @(Model.PaymentStatus?"Paid":"Submitted")
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.ProofOfPayment)
                </dt>
                <dd class="col-sm-10">
                    <a href="~/Uploads/@Model.ProofOfPayment" target="_blank"><i class="fas fa-paperclip"></i> Download</a>
                </dd>

                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Created)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Created)
                </dd>
            </dl>
        </div>
    </div>

    <div class="card-footer">
        <div>
            <a asp-action="Index" class="btn btn-sm btn-success">  <i class="fas fa-long-arrow-alt-left"></i> Back to List</a>
            @if (!Model.PaymentStatus)
            {
                <a asp-action="ConfirmPayment" asp-route-id="@Model.Id" class="btn btn-sm btn-primary">  <i class="far fa-thumbs-up"></i> Confirm Payment</a>
            }
            else
            {
                <a asp-action="UndoConfirmPayment" asp-route-id="@Model.Id" class="btn btn-sm btn-danger">  <i class="far fa-thumbs-down"></i> Undo Confirmation</a>
            }
        </div>
    </div>
</div>


@{
    ViewData["Title"] = "Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model IEnumerable<RpaData.Models.ViewModels.UserViewModel>;

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h2 class="m-0 text-dark">@ViewData["Title"]</h2>
            </div><!-- /.col -->
            <div class="col-sm-6">
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->
<section class="content">
    <div class="container-fluid">
        <div class="card ">
            <div class="card-header">
                <div class="btn-group btn-group-sm pull-right">
                    <div class="btn-group btn-group-sm pull-right">
                        <a href="@Url.Action("Create")" class="btn btn-info btn-sm">CREATE</a>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <table id="example2" class="table table-bordered table-hover table-striped">
                    <thead  class="thead-light">
                        <tr>
                        <th>ID</th>
                        <th>Username</th>
                        <th>Email</th>
                        <th>Roles</th>
                        <th>Status</th>
                        <th></th>
                        </tr>
                    </thead>
                    <tbody class="table-sm">
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>@user.FullName</td>
                                <td>@user.UserName</td>
                                <td>@user.Email</td>
                                <td>@user.Roles.</td>
                                <td>@user.EmailConfirmed</td>
                                <td><a class="btn btn-sm btn-primary" asp-action="Update" asp-route-id="@user.Id">Update</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>
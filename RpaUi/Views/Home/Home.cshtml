
@{
    ViewData["Title"] = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-12">
                <h1 class="m-0 text-dark text-center">@ViewData["Title"]</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->
<section class="content">
    <div class="container-fluid">

        <div class="text-center">
            <h1>Welcome</h1>
        </div>
        <div class="row">
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body text-center">
                        <i class="fa fa-users fa-5x" aria-hidden="true"></i>
                        <h3 class="">Clients</h3>
                        <hr />
                        <p> <b class="text-orange">@ViewBag.ClientsMonth New Client/s*</b> in<b class="text-blue"> @DateTime.Now.ToString("MMMM yyyy")</b></p>
                        <p class="text-purple"><b> @ViewBag.Client Total Clients</b></p>
                        <hr />
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body text-center">
                        <i class="fas fa-calendar-check fa-5x"></i>
                        <h3 class="text-center">Events</h3>
                        <hr />
                        <p><b class="text-orange">@ViewBag.VehiclesMonth Meeting/s*</b> in  <b class="text-blue">@DateTime.Now.ToString("MMMM yyyy")</b></p>
                        <p class="text-purple"><b>@ViewBag.Vehicles Total Meetings</b></p>
                        <hr />
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body text-center">
                        <i class="fas fa-chart-line  fa-5x"></i>
                        <h3 class="text-center">Payments</h3>
                        <hr />
                        <p><b class="text-orange">@ViewBag.WashesMonth Revenue*(@ViewBag.WashesCountMonth)</b>  in  <b class="text-blue">@DateTime.Now.ToString("MMMM yyyy")</b></p>
                        <p class="text-purple"><b>@ViewBag.Washes Total Revenue(@ViewBag.WashesCount)</b></p>
                        <hr />
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

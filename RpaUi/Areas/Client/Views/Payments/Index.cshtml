@model IEnumerable<RpaData.Models.tblPayments>

@{
    ViewData["Title"] = "Payments";
    Layout = "~/Views/Shared/_ClientLayout.cshtml";
}


<div class="content-header">
    <div class="container">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h2>Payments</h2>
            </div><!-- /.col -->
            <div class="col-sm-6">
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->

<div class="card">
    <div class="card-body">
        <table id="example2" class="table table-bordered table-hover">
            <thead class="thead-light">
                <tr>
                    <th>
                        Id
                    </th>
                    <th>
                        List of Payments
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td>
                            <b>Invoice No. : </b>  INV-@item.InvoiceId.ToString("000") <br />
                            <b>Amount Paid : </b>@Html.DisplayFor(modelItem => item.AmountPaid) <br />
                            <b>Payment Date : </b>@Html.DisplayFor(modelItem => item.PayDate) <br />
                            <b>Payment Status : </b>  @(item.PaymentStatus?"Paid":"Submitted")

                            <hr />

                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-success"><i class="fas fa-folder-open"></i> View Details</a>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
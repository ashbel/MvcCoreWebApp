@model RpaData.Models.tblPayments

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_ClientLayout.cshtml";
}


<div class="content-header">
    <div class="container">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h2>Payment Details</h2>
            </div><!-- /.col -->
            <div class="col-sm-6">
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->
<div class="card">
    <div class="card-body">
        <div>
            <a asp-action="Index" class="btn btn-sm btn-outline-success">  <i class="fas fa-long-arrow-alt-left"></i> Back to List</a>
        </div>
        <div>
            <hr />
            <dl class="row">
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Invoice)
                </dt>
                <dd class="col-sm-10">
                    INV-@Model.InvoiceId.ToString("000")
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.AmountPaid)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.AmountPaid)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.PayDate)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.PayDate)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.PaymentComment)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.PaymentComment)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.PaymentType)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.PaymentType.CodeName)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.PaymentStatus)
                </dt>
                <dd class="col-sm-10">
                    @(Model.PaymentStatus?"Paid":"Submitted")
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.ProofOfPayment)
                </dt>
                <dd class="col-sm-10">
                    <a href="~/Uploads/@Model.ProofOfPayment" target="_blank"><i class="fas fa-paperclip"></i> Download</a>
                </dd>
            </dl>
        </div>
    </div>
    <div class="card-footer">
        <div>
            <a asp-action="Index" class="btn btn-sm btn-outline-success">  <i class="fas fa-long-arrow-alt-left"></i> Back to List</a>
        </div>
    </div>
</div>



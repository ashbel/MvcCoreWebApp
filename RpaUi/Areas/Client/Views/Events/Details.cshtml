@model RpaData.Models.tblEvents

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_ClientLayout.cshtml";
}



<div class="content-header">
    <div class="container">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h3> @Html.DisplayFor(model => model.EventName) - Details</h3>
            </div><!-- /.col -->
            <div class="col-sm-6">
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->

<div class="card">
    <div class="card-body">
        <div>
            <a asp-action="Index" class="btn btn-sm btn-outline-success">  <i class="fas fa-long-arrow-alt-left"></i> Back to List</a>
            @if (Model.tblEventsHistory.Count() > 0)
            {
                bool? attending = Model.tblEventsHistory.FirstOrDefault()?.Attending;
                bool? attendend = Model.tblEventsHistory.FirstOrDefault()?.AttendedEvent;


                @if (attending.Value)
                {
                    <a href="@Url.Action("Confirm", "Events", new { id = Model.Id, attend = false })" class="btn btn-sm btn-outline-danger">  <i class="far fa-thumbs-down"></i> RSVP (Decline)</a>
                }
                else
                {
                    <a href="@Url.Action("Confirm", "Events", new { id = Model.Id, attend = true })" class="btn btn-sm btn-outline-primary">  <i class="far fa-thumbs-up"></i>  RSVP (Accept)</a>
                }

            }
            else
            {
                <a href="@Url.Action("Confirm", "Events", new { id = Model.Id, attend = true })" class="btn btn-sm btn-outline-primary">  <i class="far fa-thumbs-up"></i>  RSVP (Accept)</a>
            }

        </div>
        <div>
            <hr />
            <dl class="row">

                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.EventName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.EventName)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.EventStartDate)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.EventStartDate)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.EventEndDate)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.EventEndDate)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.EventVenue)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.EventVenue)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.EventPoints)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.EventPoints)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.EventDescription)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.EventDescription)
                </dd>
            </dl>
            <hr />
        </div>
    </div>
    <div class="card-footer">
        <a asp-action="Index" class="btn btn-sm btn-outline-success">  <i class="fas fa-long-arrow-alt-left"></i> Back to List</a>
        @if (Model.tblEventsHistory.Count() > 0)
        {
            bool? attending = Model.tblEventsHistory.FirstOrDefault()?.Attending;
            bool? attendend = Model.tblEventsHistory.FirstOrDefault()?.AttendedEvent;


            @if (attending.Value)
            {
                <a href="@Url.Action("Confirm", "Events", new { id = Model.Id, attend = false })" class="btn btn-sm btn-outline-danger">  <i class="far fa-thumbs-down"></i> RSVP (Decline)</a>
            }
            else
            {
                <a href="@Url.Action("Confirm", "Events", new { id = Model.Id, attend = true })" class="btn btn-sm btn-outline-primary">  <i class="far fa-thumbs-up"></i>  RSVP (Accept)</a>
            }

        }
        else
        {
            <a href="@Url.Action("Confirm", "Events", new { id = Model.Id, attend = true })" class="btn btn-sm btn-outline-primary">  <i class="far fa-thumbs-up"></i>  RSVP (Accept)</a>
        }
    </div>
</div>


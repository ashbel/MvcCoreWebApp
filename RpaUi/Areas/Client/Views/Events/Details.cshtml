@model RpaData.Models.tblEventsHistory

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_ClientLayout.cshtml";
}



<div class="content-header">
    <div class="container">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h3> @Html.DisplayFor(model => model.Event.EventName) - Details</h3>
            </div><!-- /.col -->
            <div class="col-sm-6">
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->

<div class="card">
    <div class="card-body">
        <div>
            <a asp-action="Index" class="btn btn-sm btn-outline-success">  <i class="fas fa-long-arrow-alt-left"></i> Back to List</a>
            @{
                if (!Model.Event.EventComplete)
                {
                    if (Model.Attending)
                    {
                        <a href="@Url.Action("Confirm", "Events", new {id = Model.Id, attend = false})" class="btn btn-sm btn-outline-danger"> <i class="far fa-thumbs-down"></i> RSVP (Decline)</a>
                    }
                    else
                    {
                        <a href="@Url.Action("Confirm", "Events", new {id = Model.Id, attend = true})" class="btn btn-sm btn-outline-primary"> <i class="far fa-thumbs-up"></i> RSVP (Accept)</a>
                    }

                }
            }


        </div>
        <div>
            <hr />
            <dl class="row">

                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Event.EventName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Event.EventName)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Event.EventStartDate)
                </dt>
                <dd class="col-sm-10">
                    @Model.Event.EventStartDate.ToString("f")
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Event.EventEndDate)
                </dt>
                <dd class="col-sm-10">
                    @Model.Event.EventEndDate.ToString("f")
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Event.EventVenue)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Event.EventVenue)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Event.EventPoints)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Event.EventPoints)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Event.EventDescription)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Event.EventDescription)
                </dd>
                <dt class="col-sm-4">
                    Status
                </dt>
                <dd class="col-sm-10">
                    @(Model.Event.EventComplete?"Complete" :"Scheduled")
                </dd>
            </dl>
            <hr />
        </div>
    </div>
    <div class="card-footer">
        <a asp-action="Index" class="btn btn-sm btn-outline-success">  <i class="fas fa-long-arrow-alt-left"></i> Back to List</a>
        @*@if (Model.tblEventsHistory.Count() > 0)

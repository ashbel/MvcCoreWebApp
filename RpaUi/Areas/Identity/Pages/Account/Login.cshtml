@page
@model LoginModel

@{
    Layout = "~/Views/Shared/_PublicLayout.cshtml";
    ViewData["Title"] = "Log In";
}

    <section id="contact" class="contact">
        <div class="container">

            <div class="section-title">
            <span>Log In</span>
            <h2>Log In</h2>
        </div>
            <div class="info">
                <div class="row">
                    <div class="col-md-3"></div>
                    <div class="col-md-6">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            @*<img src="~/img/mopane.png" class="img-responsive center-block" width="300" />*@
                            <h2 class="text-center">@ViewBag.Title</h2>
                            <form id="account" method="post">
                                <hr />
                                <div class="form-group">
                                    <label asp-for="Input.Email"></label>
                                    <input asp-for="Input.Email" class="form-control" />
                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Input.Password"></label>
                                    <input asp-for="Input.Password" class="form-control" />
                                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                                </div>

                                <button class="btn bg-green btn-block text-uppercase" type="submit">Sign in</button>
                                <hr class="my-4">
                                <div class="form-group text-center">
                                    <p>
                                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your Password?</a><br />
     
                                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register an Account?</a><br />
           
                                        @*<a id="resend-confirmation" asp-page="./Home">Home</a>*@
                                    </p>
                                </div>
                            </form>
                    </div>
                </div>
            </div>
         </div>
</section>


    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
